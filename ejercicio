#include <conio.h>
#include <iostream>

using namespace std;

#define F 20

struct Telemento
{ int subM [F][F];
};

struct sale
{ int svec[F];
};

void cargar (Telemento vec[], int n)
{int i,j,k;
for(i=0;i<n;i++)
	{for(j=0;j<n;j++)
		{for (k=0;k<n;k++)
			{cout<< "digito?: ";
			cin>>vec[i].subM[j][k];
			}
		}
	}
}

void mostrar (Telemento vec[], int n)
{int i,j,k;
for(i=0;i<n;i++)
	{for(j=0;j<n;j++)
		{for (k=0;k<n;k++)
			{cout<<vec[i].subM[j][k]<<" ";
			}
cout<<endl;
		}
cout<<endl;
	}

}

void ordenar(sale mat[][], int n)
{int i,j,k;
for(i=0;i<n;i++)
	{for(j=0;j<n;j++)
		{for (k=0;k<n-1;k++)
			{
				if(mat[i][j].svec[k]>mat[i][j].svec[k+1])
				{mat[i][j].svec[k]=mat[i][j].svec[k+1];
		
				}
			}
		}
	}
}

void ordenarElementos (Telemento vec[], int n)
{int i,j,k;


for(i=0;i<n;i++)
	{for(j=0;j<n;j++)
		{for (k=0;k<n;k++)
			{mat[i][j].svec[k]= vec[i].subM[j][k];	
			}
			ordenar (mat,n);
		}
	}
}


void main()
{int n;
Telemento vec[20];
sale mat[20][20];
cout<<"Ingrese TamaÃ±o del vector y matriz cuadrada: ";
cin>>n;
cargar(vec,n);
mostrar(vec,n);
ordenarElementos(vec,mat,n);
mostrar(vec,n);
getch();
}
